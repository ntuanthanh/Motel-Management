@page "/admin/room/list"
@model MotelManagement.Pages.admin.ListRoomModel
@{
}
<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <div class="mt-5">
               <h4 class="card-title float-left mt-2">Danh Sách Phòng Trọ</h4>
                <a href="add-employee.html" class="btn btn-primary float-right veiwbutton">Thêm Phòng</a>
           </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form action = "/admin/room/booking/list" method = "Get">
            <input type ="hidden" name = "roomId" value = "@ViewData["roomId"]"/>
            <div class="row formtype">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Tên Người Booking</label>
                        <input class="form-control" name = "nameBooking" type="text" value="@ViewData["nameBooking"]" placeholder = "Search Theo Tên" >
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" name = "emailBooking" type="text" value="@ViewData["emailBooking"]" placeholder = "Search Theo Email" >
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Phone</label>
                        <input class="form-control" name = "phoneBooking" type="text" value="@ViewData["phoneBooking"]" placeholder = "Search Theo Phone" >
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>From Date Booking</label>
                        <div class="cal-icon">
                            <input type="text" name = "fromBooking" value = "@ViewData["fromBooking"]" class="form-control datetimepicker">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>To Date Booking</label>
                        <div class="cal-icon">
                            <input type="text" name = "toBooking" value = "@ViewData["toBooking"]" class="form-control datetimepicker">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Search</label>
                        <button class = "btn btn-info m-t-0 btn-block search_button"> Search </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card card-table">
            <div class="card-body booking_card">
                <div class="table-responsive">
                    <table class="table table-stripped table table-hover table-center mb-0">
                        <thead>
                            <tr>
                                <th>Room Id</th>
                                <th>Tên Phòng</th>
                                <th>Giá</th>
                                <th>Tối Đa</th>
                                <th>Trạng Thái</th>
                                <th>Loại Phòng</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for(int i = 0; i < 10; i++)
                            {
                              <tr>
                                  <td>3</td>
                                  <td>Phòng 101</td>
                                  <td>2.500.000 Đồng</td>
                                  <td>2 Người</td>
                                  <td>Đang thuê</td>
                                  <td>Khu Gần Núi</td>
                                  <td><button class = "btn btn-info veiwbutton">Danh Sách Booking</button></td>
                                  <td><button class = "btn btn-info veiwbutton">Update</button></td> 
                              </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>